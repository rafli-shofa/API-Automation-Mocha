{
  "type": "object",
  "required": ["token"],
  "additionalProperties": false,
  "properties": {
    "token": {
      "type": "string",
      "minLength": 8
    },
    "user": {
      "type": "object",
      "required": ["id", "email"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "number" },
        "email": { "type": "string", "format": "email" },
        "name": { "type": "string" }
      }
    }
  }
}
